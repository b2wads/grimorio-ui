/* ==========================================================================
   Variables
========================================================================== */
/* ==========================================================================
   Placeholders
========================================================================== */
$brandHeader {
  align-items: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  display: flex;
  font-size: 0;
  height: 60px;
  justify-content: center;
  overflow: hidden;
  padding: 15px 0;
}

$brandLogo {
  fill: $white;
  width: auto;
}

/* ==========================================================================
   Panel Component
========================================================================== */
.loader {
  margin-top: 10px;
}

.error {
  margin-top: 10px;
}

/* Default
================ */
.default {
  @extend $drop-shadow;
  background: $white;
  border-radius: 2px;
  width: 100%;

  &.isBrand {
    padding: 0;
  }

  &.noPadding {
    padding: 0;
  }
}

.titleWrap {
  &.isAccordion {
    align-items: center;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
  }
}

.title {
  color: var(--c-support);
  font-size: 21px;
}

.arrow {
  margin-left: 10px;
}

/* Size
================ */
.wrapper {
  &.small {
    padding: 20px 15px;
  }

  &.medium {
    padding: 25px 20px;
  }

  &.large {
    padding: 30px 25px;
  }

  &.isBrand {
    padding: 0;
  }

  &.noPadding {
    padding: 0;
  }
}

.content {
  opacity: 1;
  transition: all 0.3s ease;

  &.isBrand {
    padding: 0 10px 10px;
  }

  &.isClosed {
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  &.noPadding {
    padding: 0;
  }
}

/* Footer
================ */
.footer {
  border-top: 1px solid $c-secondary;
  display: block;

  &.small {
    padding: 15px;
  }

  &.medium {
    padding: 20px;
  }

  &.large {
    padding: 25px;
  }

  &.isClosed {
    display: none;
  }
}

/* Brand
================ */
.acom {
  @extend $brandHeader;
  background: $c-acom;

  .brandLogo {
    @extend $brandLogo;
    height: 22px;
  }
}

.suba {
  @extend $brandHeader;
  background: $c-suba;

  .brandLogo {
    @extend $brandLogo;
    height: 35px;
    margin-top: -5px;
  }
}

.shop {
  @extend $brandHeader;
  background: $c-shop;

  .brandLogo {
    @extend $brandLogo;
    height: 30px;
    stroke: $white;
  }
}

.soub {
  @extend $brandHeader;
  background: $c-soub;

  .brandLogo {
    @extend $brandLogo;
    height: 35px;
  }
}
