  }
}

/* Undo
 ========================================================================== */
.undo {
  @extend $button;
  @extend $colorText-light;

  background: $undo;
  border-color: $border-color-undo;

  &.outline {
    background: none;
    color: $undo;

    path { fill: $undo; }
  }

  &:hover {
    background-color: $undo-hover;
    border-color: $border-color-undo-hover;
    // replace outline
    color: $color-light;
    path { fill: $color-light; }
  }
}

/* None
 ========================================================================== */
.transparent {
  @extend $button;

  background: none;
  border: 0;

  &.outline {
    background: none;
  }

  &:hover {
    background: none;
  }
}

/* Sizes
 ========================================================================== */
.mini {
  font-size: 12px;
  line-height: 1.5;
  padding: 1px 5px;
}

.small {
  font-size: 13px;
  line-height: 1.5;
  padding: 6px 10px;
}

.medium {
  font-size: 14px;
  line-height: 1.42857143;
  padding: 10px 15px;
}

.large {
  font-size: 18px;
  line-height: 1.3333333;
  padding: 15px 42px;
}

.none {
  font-size: 18px;
  line-height: 1;
  padding: 0;
}

/* Block
 ========================================================================== */
.block {
  display: block;
  width: 100%;
}

/* Rounded
 ========================================================================== */
.rounded {
  border-radius: 50px;
}

/* Circle
 ========================================================================== */
.circle {
  border-radius: 50%;
  line-height: 0;

  &.mini {
    min-height: 22px;
    min-width: 22px;
    padding: 0;
  }

  &.small {
    min-height: 28px;
    min-width: 28px;
    padding: 3px;
  }

  &.medium {
    min-height: 34px;
    min-width: 34px;
    padding: 6px;
  }

  &.large {
    min-height: 42px;
    min-width: 42px;
    padding: 10px;
  }
}

/* Loading
 ========================================================================== */
.loading {
  font-size: 0;

  &:after {
    content: "Carregando......";
    display: inline-block;
    font-size: 14px;
  }

  svg { display: none; }
}
