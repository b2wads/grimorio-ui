    border-color: $border-color-info-hover;
    // replace outline
    color: $color-light;
    path { fill: $color-light; }
  }
}

/* Warning
 ========================================================================== */
.warning {
  @extend $button;
  @extend $colorText-light;

  background: $warning;
  border-color: $border-color-warning;

  &.outline {
    background: none;
    color: $warning;

    path { fill: $warning; }
  }

  &:hover {
    background-color: $warning-hover;
    border-color: $border-color-warning-hover;
    // replace outline
    color: $color-light;
