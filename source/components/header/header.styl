/* ==========================================================================
   Placeholders
========================================================================== */
$headerItem {
  font-size: 14px;
}

/* ==========================================================================
   Header Elements
========================================================================== */

.header {
  align-items: center;
  background: $c-primary;
  display: flex;
  height: 74px;
  justify-content: flex-end;
  padding: 0 20px;
  position: relative;
  width: 100%;
  color: $white;

  &.isMobile {
    background-color: $c-support-dark;
  }
}

.logo {
  display: block;
  margin: 0 auto;
}

/* ==========================================================================
   Header Props
========================================================================== */

/* headerItem
 ================ */

.headerUser {
  @extend $headerItem;
  text-align: left;

  .iconLeft {
    margin-right: 5px;
  }

  .iconRight {
    margin-left: 2px;
  }
}

.headerLogout {
  @extend $headerItem;

  .iconRight {
    margin-left: 5px;
  }

  &.isMobile {
    padding: 0;
    position: absolute;
    right: 20px;
    top: 28px;
  }
}


