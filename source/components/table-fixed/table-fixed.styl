.wrap {
  display: flex;
  overflow: auto;
}

.table {
  tr {
    height: 60px;
  }
}

.sticky {
  position: sticky;
  z-index: 3;
  left: 0;
  table {
    background: white;
    tbody {
      box-shadow: 2px 1px 4px 0 rgba(0, 0, 0, 0.17);
    }
  }
}
