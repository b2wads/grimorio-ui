/* ==========================================================================
   Variables
========================================================================== */
$c-input = #333;
$placeholder = #999;
$c-border = #ccc;
$c-label = #999;

/* ==========================================================================
   Placeholders
========================================================================== */
$menu {
  @extend $drop-shadow;
  background: $white;
  left: 0;
  list-style: none;
  margin: 0;
  opacity: 0;
  padding: 8px 0;
  position: absolute;
  top: 0;
  transform: scaleY(0);
  user-select: none;
  width: 100%;
  z-index: -1;
}

$field {
  border: 0;
  border-bottom: 1px solid $c-border;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  color: inherit;
  display: block;
  font-size: inherit;
  height: 35px;
  outline: 0;
  text-indent: 5px;
  user-select: none;
  width: 100%;
}

/* ==========================================================================
   Select Elements
========================================================================== */
/* ==========================================================================
   Select Props
========================================================================== */
/* Default
================ */
.selectWrap {
  position: relative;
}

.button {
  cursor: pointer;
  display: block;
  position: relative;
}

.arrow {
  color: $c-text;
  position: absolute;
  right: 0;
  top: 8px;
  z-index: 1;
}

.input {
  @extend $field;
  font-size: inherit;
  line-height: 1;
  overflow: hidden;
  padding-right: 15px;
  padding-top: 10px;
  text-overflow: ellipsis;
  white-space: nowrap;

  &.isPlaceholder {
    color: $placeholder;
  }

  &.isActive {
    border-color: $c-primary;
  }

  &.isDisabled {
    background: $c-back-disabled;
    border-color: $c-border;
    color: $c-text-disabled;
    cursor: not-allowed;
  }
}

.labelWrapper {
  position: relative;
}

.label {
  color: $c-label;
  font-size: 16px;
  font-weight: 400;
  left: 5px;
  line-height: 1;
  pointer-events: none;
  position: absolute;
  top: 10px;
  transition: all 0.25s ease;

  &.isActive {
    color: $c-active-input;
    font-size: 12px;
    top: -1.5rem;
    transition: all 0.125s ease;
  }
}

.menu {
  @extend $menu;

  &.isUnder {
    top: calc(100% + 5px);
  }

  &.isBottom {
    bottom: 0;
    top: inherit;
  }

  &.isScroll {
    overflow-y: scroll;
  }

  &.isOpen {
    opacity: 1;
    transform: scaleY(1);
    transition: opacity 0.5s ease;
    z-index: $z-upmax;
  }

  &.isMobile {
    border-radius: 2px;
    left: 50%;
    max-height: calc(100vh - 140px);
    overflow-y: scroll;
    position: fixed;
    top: 70px;
    transform: translate(-50%, 0);
    width: 90%;
  }
}

.option {
  color: $c-text;
  cursor: pointer;
  padding: 10px 16px;

  &:hover {
    background: $c-support-light;
  }

  &.isSelected {
    background: darken($c-support-light, 5%);
  }
}

.optionIcon {
  margin-right: 5px;
}

.optionContent {
  display: inline-block;
  vertical-align: middle;
  word-break: break-all;
}

.overlay {
  @extend $overlay;
}

.isOutline {
  .input {
    border: 1px solid $c-border;
    border-radius: 3px;
    line-height: 5px;
    padding: 24px 10px 22px;
  }

  .arrow {
    right: 5px;
    top: 16px;
  }

  .label {
    padding-left: 10px;
    top: 17px;

    &.isActive {
      background: $white;
      left: 10px;
      padding: 0 5px;
      top: -6px;
      width: auto;
    }
  }

  .menu {
    top: 10px;
  }
}
