$color-default = #777;

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 100;

  small {
    color: $color-default;
    font-size: 65%;
    font-weight: 400;
    line-height: 1;
  }
}

h1 { font-size: 30px; }
h2 { font-size: 24px; }
h3 { font-size: 16px; }
h4 { font-size: 14px; }
h5 { font-size: 12px; }
h6 { font-size: 10px; }

h3,
h4,
h5 {
  font-weight: 600;
  margin-top: 5px;
}
